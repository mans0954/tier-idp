#
# run file for Centos+systemd invoked from Ubuntu 14.04 host OS
#
docker run -ti \
         --stop-signal=RTMIN+3 \
         -e "container=docker" \
         --tmpfs /run --tmpfs /tmp \
         -v /sys/fs/cgroup:/sys/fs/cgroup:ro \
         --cap-add=SYS_ADMIN \
         -p 0.0.0.0:8080:8080  shibboleth-idp
